@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<NetDevPLWeb.Features.Conferences.ConferencesListViewModel>

<div class="jumbotron clearfix">
    <h2>Lista zbliżających się konferencji, na których warto być:</h2>
    
    <ul>
        @foreach (var conference in Model.Conferences)
        {
            <li>
                <blockquote>
                    <p>
                        <a href="@conference.Url" target="_blank">
                            <h4>@conference.Title</h4>
                        </a>
                    </p>
                    <small>@conference.When, <cite title="Source Title">@conference.Location</cite></small>
                </blockquote>
            </li>
        }
    </ul>
</div>
